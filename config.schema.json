{
  "pluginAlias": "MultiTapSwitch",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "name": {
      "title": "Platform Name",
      "type": "string",
      "required": "true",
      "default": "MultiTapSwitch"
    },
    "enabled": {
      "title": "Enable",
      "type": "boolean",
      "required": true,
      "default": true
    },
    "devices": {
      "type": "array",
      "items": {
        "title": "Switch",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string",
            "required": true
          },
          "numberConfiguredScenes": {
            "title": "Max. Scenes",
            "type": "number",
            "required": true,
            "default": 5
          },
          "triggerTimeout": {
            "title": "Reset Timeout",
            "type": "number",
            "required": true,
            "default": 10
          },
          "resetAfterSwitchOff": {
            "title": "Reset after Switch-Off",
            "type": "boolean",
            "required": true,
            "default": false
          },
          "logging": {
            "title": "Log state changes",
            "type": "boolean",
            "required": true,
            "default": false
          }
        }
      }
    }
  }
}
