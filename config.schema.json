{
  "pluginAlias": "MultiTapSwitch",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "devices": {
      "type": "array",
      "items": {
        "title": "Switch",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string",
            "required": true
          },
          "numScenes": {
            "title": "Max. Scenes",
            "type": "number",
            "required": true,
            "default": 5
          },
          "secondsToKeep": {
            "title": "Reset Timeout",
            "type": "number",
            "required": true,
            "default": 10
          }
        }
      }
    }
  }
}
